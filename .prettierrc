{
    "printWidth": 120,
    "tabWidth": 1,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.java"],
            "options": {
                "printWidth": 140,
                "tabWidth": 4,
                "useTabs": false,
                "trailingComma": "none"
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "mdx"
            }
      }
    ]
  }
